{
  "name": "paris-ap-agent",
  "private": true,
  "packageManager": "pnpm@9.5.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -k -n API,WORKERS,ADMIN \"pnpm --filter @paris/api dev\" \"pnpm --filter @paris/workers dev\" \"pnpm --filter @paris/admin dev\"",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "pnpm --filter @paris/api test && pnpm --filter @paris/workers test && pnpm --filter @paris/admin test",
    "test:api": "pnpm --filter @paris/api test",
    "test:workers": "pnpm --filter @paris/workers test",
    "test:admin": "pnpm --filter @paris/admin test",
    "build": "pnpm -r build"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "eslint": "^9.5.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  }
}