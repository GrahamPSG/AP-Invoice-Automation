{
  "name": "what-if-calculator",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -k \"pnpm --filter web dev\" \"pnpm --filter api start:dev\"",
    "build": "pnpm --filter web build && pnpm --filter api build",
    "test": "vitest run",
    "test:api": "nx run api:test",
    "cypress:run": "cypress run",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^13.4.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.4.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "jest": "^30.0.0",
    "jsdom": "^22.1.0",
    "nx": "^16.7.0",
    "postcss": "^8.4.27",
    "prettier": "^3.3.0",
    "typescript": "^5.5.0",
    "vitest": "^2.5.0"
  }
}